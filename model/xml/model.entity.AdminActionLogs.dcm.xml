<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="model\entity\AdminActionLogs" table="admin_action_logs">
    <indexes>
      <index name="action" columns="action,op_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="action" type="string" column="action" length="32" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">动作名称</option>
      </options>
    </field>
    <field name="text" type="string" column="text" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">动作简要描述</option>
      </options>
    </field>
    <field name="opId" type="integer" column="op_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">操作员id</option>
      </options>
    </field>
    <field name="opName" type="string" column="op_name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">操作员昵称</option>
      </options>
    </field>
    <field name="ext" type="string" column="ext" length="1024" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">其他扩展信息</option>
        <option name="default"/>
      </options>
    </field>
    <field name="addTime" type="string" column="add_time" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">入库时间</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
