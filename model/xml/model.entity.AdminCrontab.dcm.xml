<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="model\entity\AdminCrontab" table="admin_crontab">
    <indexes>
      <index name="lastTime" columns="last_time"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="name" columns="name"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">任务名称</option>
      </options>
    </field>
    <field name="crontabStr" type="string" column="crontab_str" length="60" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">crontab 时间格式字符串</option>
      </options>
    </field>
    <field name="command" type="string" column="command" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">执行命令</option>
      </options>
    </field>
    <field name="query" type="string" column="query" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">参数</option>
        <option name="default"/>
      </options>
    </field>
    <field name="remark" type="string" column="remark" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">描述</option>
      </options>
    </field>
    <field name="type" type="string" column="type" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">分类</option>
      </options>
    </field>
    <field name="runCount" type="integer" column="run_count" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">一共执行次数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="status" type="string" column="status" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">wait:等待中 stop:已经停止 run:正在执行中</option>
        <option name="default">wait</option>
      </options>
    </field>
    <field name="lastTime" type="datetime" column="last_time" nullable="false">
      <options>
        <option name="comment">最后一次执行的时间</option>
      </options>
    </field>
    <field name="addTime" type="datetime" column="add_time" nullable="false">
      <options>
        <option name="comment">添加时间</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
